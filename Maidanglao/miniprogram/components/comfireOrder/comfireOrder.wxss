.confirePage {
  width: 100%;
  height: 100%;
  position: relative;
  display: flex;
  justify-content: center;
  align-items: center;
}

.hidden {
  display: none
}

.overlay {
  background-color: rgba(0, 0, 0, 0.5);
  z-index: 200;
  width: 100vw;
  height: 100vh;
}
.confirm {
  width: 600rpx;
  background-color: #ffffff;
  border-radius: 10rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  position: absolute;
  z-index: 300;
}

.hook-img {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  background-color: #ffffff;
  box-sizing: border-box;
  position: absolute;
  top: -60rpx;
}

.hook-img image {
  width: 120rpx;
  height: 120rpx;
}

.null {
  width: 60rpx;
  height: 60rpx;
  padding-bottom: 20rpx;
}

.hook-shadow {
  width: 102rpx;
  height: 12rpx;
  background-color: #e3e3e3;
  border-radius: 50%;

}

.confirm-tip {
  text-align: center;
  font-size: 28rpx;
  color: #878787;
  padding: 50rpx;
}

.btn {
  width: 100%;
  font-size: 30rpx;
  font-weight: bold;
  display: flex;
  align-items: center;
  justify-content: space-between;
  box-sizing: border-box;
  padding: 0 50rpx 50rpx 50rpx;
}

.fBtn {
  width: 230rpx;
  height: 70rpx;
  background-color: #333333;
  color: #ffc836;
  text-align: center;
  line-height: 70rpx;
  border-radius: 8rpx;
  
}

.tBtn {
  width: 230rpx;
  height: 70rpx;
  background-color: #ffc836;
  color: #333333;
  text-align: center;
  line-height: 70rpx;
  border-radius: 8rpx;
}
